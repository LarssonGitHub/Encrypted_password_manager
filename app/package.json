{
  "name": "the-padlock-vault",
  "version": "1.0.0",
  "description": "A local-only app that securely stores encrypted information, passwords, and credentials submitted by the user.",
  "main": "src/server/index.js",
  "scripts": {
    "buildBackend": "tsc -p ./TS-backend",
    "buildFrontend": "tsc -p ./TS-frontend",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "npm run buildBackend &&  npm run buildFrontend && electron ./src/server/index.js",
    "startWithoutTsc": "electron ./src/server/index.js",
    "buildWindowsApp": "electron-builder build --win",
    "buildLinuxApp": "electron-builder build --linux",
    "buildMacApp": "electron-builder build --mac"
  },
  "build": {
    "appId": "The-padlock-vault",
    "mac": {
      "target": "dmg",
      "icon": "./src/public/assets/favicons/favicon.png"
    },
    "win": {
      "target": "portable",
      "icon": "./src/public/assets/favicons/favicon.png"
    },
    "linux": {
      "category": "password-manager-app",
      "icon": "./src/public/assets/favicons/favicon.png",
      "executableName": "The-padlock-vault",
      "target": [
        "appImage"
      ]
    }
  },
  "repository": "https://github.com/LarssonGitHub/The_vault",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "Martin Larsson",
  "license": "CC0-1.0",
  "devDependencies": {
    "@types/crypto-js": "^4.1.1",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^22.2.0",
    "electron-builder": "^24.6.3",
    "electron-packager": "^17.1.1",
    "eslint": "^7.32.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "uuidv4": "^6.2.13",
    "write": "^2.0.0"
  }
}